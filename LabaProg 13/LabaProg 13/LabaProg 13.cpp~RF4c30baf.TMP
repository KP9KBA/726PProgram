#include <iostream>
#include <cmath>
#include <ctime>
using namespace std;
int main() {
	srand(time_t(0));
	setlocale(LC_ALL, "ru");
	int a;
	cout << "Введите номер задания" << endl;
	cin >> a;
	switch (a) {
	case 1: {
		/*Дано целое число N (> 0). Сформировать и вывести целочисленный 
		массив размера N, содержащий N первых положительных нечетных чисел: 1, 3, 5, . . . .*/
		int N, i, c;
		cout << "Введите размер массива" << endl;
		cin >> N;
		if (N > 0) {
			int n[100];
			for (i = 0, c = 0; i <= N-1; i++, c+=2) {
				n[i] = c;
				printf("%d ", n[i]);
			}
		}
		else cout << "неправильное число" << endl;

	}break;
	case 2: {
		/*Дано целое число N (> 1), а также первый член A и знаменатель D геометрической прогрессии.
		Сформировать и вывести массив размера N,
		содержащий N первых членов данной прогрессии: A, A·D, A·D^2 , A·D^3 , . . .*/
		int N, A, D, i;
		double c;
		cout << "Введите размер массива" << endl;
		cin >> N;
		cout << "Введите первый член геометрической прогрессии" << endl;
		cin >> A;
		cout << "Введите знаменатель геометрической прогрессии" << endl;
		cin >> D;
		if (N > 1) {
			int n[100];
			for (i = 0; i <= N - 1; i++) {
				c = A * pow(D, i);
				n[i] = c;
				printf("%d ", n[i]);
			}
		}
		else cout << "неправильное число" << endl;
	
	
	}break;
	case 3: {
		/*Даны целые числа N (> 2), A и B. Сформировать и вывести целочисленный
		массив размера N, первый элемент которого равен A,
		второй равен B, а каждый последующий элемент равен сумме всех предыдущих*/
		int N, A, B, i;
		cout << "Введите размер массива" << endl;
		cin >> N;
		cout << "Первый элемент" << endl;
		cin >> A;
		cout << "Второй элемент массива" << endl;
		cin >> B;
		
		if (N > 2) {
			int n[100];
			n[0] = A; n[1] = B;
			for (i = 2; i <= N + 1; i++) {

				n[i] = n[i-2]+n[i-1];
				printf("%d ", n[i]);
			}
		}
		else cout << "Неверное число" << endl;

	}break;
	case 4: {
		/*Дан массив A размера N. Вывести его элементы в следующем порядке: A1, AN , A2, AN−1, A3, AN−2,*/
		int A[100], N, i;
		cout << "Введите размер массива" << endl;
		cin >> N;
		for (i = 0; i <= N-1; i++) {
			A[i] = rand() % 50 - 25;
			printf("%d ", A[i]);
		}
		cout << endl;
		/*if (N % 2 != 0) {
			for (i = 0; i <= N / 2; i++) {
				printf("%d ", A[i]);
				int k = N  / 1.247  - i;
				printf("%d ", (A[k]));
			}
		}*/
		for (i = 0; i < N / 2; i++) {

			printf("%d ", A[i]);
			printf("%d ", A[N - 1 - i]);
		}
		if (N % 2 != 0) {
			printf("%d ", A[N / 2 + 1]);
		}
		
	}break;
	case 5: {
		/*Дан массив A размера N. Вывести вначале его элементы с нечетными номерами в порядке возрастания номеров,
		а затем — элементы с четными номерами в порядке убывания номеров*/
		int A[100], N, i;
		cout << "Введите размер массива" << endl;
		cin >> N;
		for (i = 0; i <= N - 1; i++) {
			A[i] = rand() % 50 - 25;
			printf("%d ", A[i]);
		}
		printf("\n");
		for (i = 0; i <= N; i++) {
			if (i % 2 != 0) {
				printf("%d ", A[i]);
				
			}
		}
		for (i = 0; i <= N-1; i++) {
			if (i % 2 == 0) {
				printf("%d ", A[i]);
			}
		}

	}break;
	default: cout << "Введен неправильный номер" << endl;
	}


	return 0;
}